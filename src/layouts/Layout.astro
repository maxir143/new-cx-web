---
import MenuNav from "../components/MenuNav.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!--Iconos-->
		<script
			src="https://kit.fontawesome.com/eb496ab1a0.js"
			crossorigin="anonymous"
		></script>
		<title>{title}</title>
	</head>
	<body>
		<MenuNav />
		<div style="margin-top: 100px;">
			<slot />
		</div>
		<Footer />
	</body>
</html>
<style is:global>
	/*Fuente que se aplicara a todo el sitio*/
	@font-face {
		font-family: "Hurme Geometric Sans 3 Regular";
		src: url("../fonts/Hurme_Geometric_Sans_3_W03_Rg.ttf");
		font-display: swap;
	}

	@font-face {
		font-family: "Hurme Geometric Sans 3 SemiBold";
		src: url("../fonts/hurmegeometricsans3_semibold-webfont.woff");
		font-display: swap;
	}

	@font-face {
		font-family: "Euclid Circular B Bold";
		src: url("../fonts/euclid-circular-b-cufonfonts.zip");
		font-display: swap;
	}
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#da62c4 30%,
			white 60%
		);
	}

	/*sans-serif fuente respaldo*/
	html,
	body {
		font-family: "Hurme Geometric Sans 3 SemiBold", sans-serif;
		margin: auto;
		color: #1d1d1d;
		overflow-x: hidden;
		background-color: #ededed;
	}

	* {
		font-family: "Hurme Geometric Sans 3 SemiBold";
	}

	span {
		font-family: "Hurme Geometric Sans 3 SemiBold";
	}

	span.span-color {
		color: #ef751b !important;
	}

	.stop-scrolling {
		height: 100%;
		overflow: hidden;
	}

	.img svg {
		width: 254px;
		height: auto;
		display: block;
		margin: 0 auto;
	}

	button {
		cursor: pointer;
	}

	ul {
		list-style: none;
	}

	.text-gradient-cx-right {
		background: linear-gradient(
			90deg,
			rgba(127, 65, 250, 1) 0%,
			rgba(249, 117, 28, 1) 100%
		);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		display: inline;
	}

	.text-gradient-cx-left {
		background: linear-gradient(
			90deg,
			rgba(249, 117, 28, 1) 0%,
			rgba(127, 65, 250, 1) 100%
		);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		display: inline;
	}

	.text-gradient-cx-radial {
		background: radial-gradient(
			closest-side,
			rgba(249, 117, 28, 1) 50%,
			rgba(127, 65, 250, 1) 150%
		);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		display: inline;
	}

	.border-gradient-cx-1 {
		border: 5px solid transparent;
		background: linear-gradient(white, white) padding-box,
			linear-gradient(
					to right,
					rgba(249, 117, 28, 1),
					rgba(127, 65, 250, 1) 100%
				)
				border-box;
	}

	.orange {
		color: #f9751c;
	}
</style>
